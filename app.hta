<html>

<head>
  <title>Система сборки поставок</title>
  <HTA:APPLICATION 
    APPLICATIONNAME="Система сборки поставок"
    SCROLL="no"
    SINGLEINSTANCE="yes"
    WINDOWSTATE="maximize"
	maximizeButton="no"
    minimizeButton="no"
	SYSMENU="yes"
	BORDER="thin"
    BORDERSTYLE="normal"
    ICON="resources/img/app.ico"
  />
  
  
  <script src=".\resources\js\jquery-1.9.1.min.js"></script> 
  <script src=".\resources\js\lib.js"></script> 
  
  <link rel="stylesheet" type="text/css" href=".\resources\css\menu.css">
  
</head>

<SCRIPT LANGUAGE="VBScript">
Option Explicit
    Sub CloseWindow
       self.close
    End Sub


</SCRIPT>

<script type="text/javascript">
		function Exe(){
		   	var WshShell = new ActiveXObject("WScript.Shell");
			var oExec = WshShell.Exec("ipconfig.exe");
			var input = "";

			 while (!oExec.StdOut.AtEndOfStream) {
			         input += oExec.StdOut.ReadLine() + "<br />";
			 }

			 if (input)
			  document.getElementById("output_area").innerHTML = input;
			    
			}

		
</script>

<body onkeypress='CloseWindow'>
<div class="mainmenu">
	<div class="tab">
	  <button class="tablinks active" onclick="">FTP</button>
	  <button class="tablinks" onclick="">PATCH</button>
	  <button class="tablinks" onclick="">OTHERS</button>
	</div>
</div>

<div class="content">
		<!-- Tab content -->
	<div id="FTP" class="tabcontent">
		<div>
			<p id="ftp_server"></p>
			<p id="ftp_user"></p>
			<p id="ftp_catalog"></p>
			<label>файл</label>
			<div><input id="get_ftp" type="" name="get_ftp" size="50" />   <input type="button" value="Download" name="run_button"  onClick="create_ftp_cmd()"/> </div>
		</div>

		<div id="PATCH" class="tabcontent hide">
	  		<p>Сборка патча</p> 
	  		<button onclick="make_pck()">Сформировать pck </button>
	  		<div class="pck_files">
		  		<table border="1">
	            <tr>
	                <td><input id="pck" type="file"  size="50"/></td>
	                <td><button onclick="make_patch('pck')">Собрать хранилище </button></td>
	            </tr>
	        	</table> 
        	</div>
		</div>

		<div id="OTHERS" class="tabcontent hide">
		  <p>Дополнительные функции</p>
		</div>
	</div>
</div>	

<div id="output_area" class="console"></div>

</body>

</html>